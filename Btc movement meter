    <script>
        const COINGECKO_API = 'https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd&include_24hr_vol=true&include_market_cap=true&include_last_updated_at=true';

        let priceHistory = [];
        let autoUpdateInterval = null;

        async function fetchBitcoinPrice() {
            try {
                const response = await fetch(COINGECKO_API);
                const data = await response.json();
                
                if (data.bitcoin) {
                    return {
                        price: data.bitcoin.usd,
                        volume24h: data.bitcoin.usd_24h_vol,
                        marketCap: data.bitcoin.usd_market_cap,
                        lastUpdated: new Date(data.bitcoin.last_updated_at * 1000)
                    };
                }
            } catch (error) {
                console.error('B≈ÇƒÖd pobierania danych:', error);
            }
            return null;
        }

        function updateLastUpdateTime(date) {
            const now = new Date(date);
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            document.getElementById('lastUpdate').textContent = `${hours}:${minutes}:${seconds}`;
        }

        async function autoUpdateData() {
            const priceData = await fetchBitcoinPrice();
            
            if (priceData) {
                const currentInput = document.getElementById('currentPrice');
                const oldPrice = parseFloat(currentInput.value);
                
                if (priceHistory.length === 0) {
                    priceHistory.push(oldPrice);
                } else {
                    priceHistory.push(priceData.price);
                }
                
                if (priceHistory.length > 2) {
                    priceHistory.shift();
                }

                currentInput.value = priceData.price.toFixed(2);
                
                if (priceHistory.length === 2) {
                    document.getElementById('daysAgo').value = priceHistory[0].toFixed(2);
                }
                
                if (priceHistory.length === 2) {
                    const priceChange = Math.abs(priceHistory[1] - priceHistory[0]) / priceHistory[0] * 100;
                    const volatilityInput = document.getElementById('volatility');
                    volatilityInput.value = Math.min(100, Math.max(20, priceChange * 10)).toFixed(0);
                }
                
                updateLastUpdateTime(priceData.lastUpdated);
                analyzeMarket();
            }
        }

        function openSource(url) {
            window.open(url, '_blank', 'noopener,noreferrer');
        }

        function analyzeMarket() {
            const currentPrice = parseFloat(document.getElementById('currentPrice').value);
            const priceAgo = parseFloat(document.getElementById('daysAgo').value);
            const volatility = parseFloat(document.getElementById('volatility').value);
            const rsi = parseFloat(document.getElementById('rsi').value);

            if (!currentPrice || !priceAgo || priceAgo === 0) return;

            const priceChange = ((currentPrice - priceAgo) / priceAgo) * 100;
            const macd = volatility * 13.5;
            const bb = currentPrice > priceAgo + (priceAgo * 0.02) ? 1.1 : 0.9;
            const atr = (currentPrice * volatility) / 100;

            document.getElementById('priceDisplay').textContent = `$${currentPrice.toLocaleString('en-US', {maximumFractionDigits: 2})}`;
            
            const changeEl = document.getElementById('changeDisplay');
            changeEl.textContent = (priceChange >= 0 ? '+' : '') + priceChange.toFixed(2) + '%';
            changeEl.className = priceChange >= 0 ? 'positive' : 'negative';

            let trend = 'NEUTRAL';
            let trendClass = 'neutral';
            if (rsi > 60 && priceChange > 1) {
                trend = 'BULLISH';
                trendClass = 'positive';
            } else if (rsi < 40 && priceChange < -1) {
                trend = 'BEARISH';
                trendClass = 'negative';
            }
            
            const trendEl = document.getElementById('trendDisplay');
            trendEl.textContent = trend;
            trendEl.className = trendClass;

            let rsiStatus = 'Neutralny (Brak Sygna≈Çu)';
            if (rsi > 70) {
                rsiStatus = 'Przegrzany - Mo≈ºliwe Spadki';
            } else if (rsi < 30) {
                rsiStatus = 'Przeceniony - Mo≈ºliwe Wzrosty';
            } else if (rsi > 50) {
                rsiStatus = 'Lekko Bycze';
            }

            document.getElementById('rsiValue').textContent = rsi.toFixed(2);
            document.getElementById('rsiStatus').textContent = rsiStatus;

            const macdStatus = macd > 100 ? 'Bycze (Powy≈ºej Linii Sygna≈Çu)' : 'Nied≈∫wiedzie (Poni≈ºej Linii Sygna≈Çu)';
            document.getElementById('macdValue').textContent = macd.toFixed(2);
            document.getElementById('macdStatus').textContent = macdStatus;

            const bbStatus = bb > 1.05 ? 'G√≥rna Granica - Mo≈ºliwe Spadki' : '≈örednia - Kurs Umiarkowany';
            document.getElementById('bbValue').textContent = bb.toFixed(2);
            document.getElementById('bbStatus').textContent = bbStatus;

            document.getElementById('atrValue').textContent = '$' + atr.toFixed(0);

            const signalStrength = Math.min(100, Math.abs(rsi - 50) * 2 + volatility * 0.3);
            document.getElementById('signalStrength').textContent = Math.round(signalStrength) + '%';

            const week1Target = currentPrice * (1 + (priceChange / 100) * 0.5 + (volatility / 100) * 0.3);
            const month1Min = currentPrice * (1 + volatility / 200);
            const month1Max = currentPrice * (1 + volatility / 100);

            document.getElementById('week1Target').textContent = '$' + week1Target.toLocaleString('en-US', {maximumFractionDigits: 0});
            document.getElementById('week1Change').textContent = (((week1Target - currentPrice) / currentPrice) * 100).toFixed(1) + '%';
            document.getElementById('month1Target').textContent = '$' + month1Min.toLocaleString('en-US', {maximumFractionDigits: 0}) + ' - $' + month1Max.toLocaleString('en-US', {maximumFractionDigits: 0});

            const bearishSupport = currentPrice * 0.94;
            const bearishSupport2 = currentPrice * 0.75;
            document.getElementById('bearishSupport').textContent = '$' + bearishSupport.toLocaleString('en-US', {maximumFractionDigits: 0});
            document.getElementById('bearishSupport2').textContent = '$' + (bearishSupport2 * 0.9).toLocaleString('en-US', {maximumFractionDigits: 0}) + ' - $' + bearishSupport2.toLocaleString('en-US', {maximumFractionDigits: 0});

            drawChart(currentPrice, week1Target, bearishSupport2);

            const week1Conf = Math.min(100, Math.abs(rsi - 50) + volatility * 0.5);
            const month1Conf = Math.min(100, week1Conf * 0.85);
            document.getElementById('week1Confidence').style.width = Math.round(week1Conf) + '%';
            document.getElementById('month1Confidence').style.width = Math.round(month1Conf) + '%';
        }

        function drawChart(current, bullish, bearish) {
            const canvas = document.getElementById('chart');
            canvas.innerHTML = '';
            
            const width = canvas.offsetWidth;
            const height = canvas.offsetHeight;
            
            const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
            svg.setAttribute('width', width);
            svg.setAttribute('height', height);
            svg.setAttribute('viewBox', `0 0 ${width} ${height}`);

            for (let i = 0; i <= 10; i++) {
                const y = (height / 10) * i;
                const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                line.setAttribute('x1', 0);
                line.setAttribute('y1', y);
                line.setAttribute('x2', width);
                line.setAttribute('y2', y);
                line.setAttribute('stroke', '#262a4a');
                line.setAttribute('stroke-width', '1');
                svg.appendChild(line);
            }

            const minPrice = bearish * 0.9;
            const maxPrice = bullish * 1.15;
            const range = maxPrice - minPrice;

            const points = 50;
            const bullishPath = [];
            const bearishPath = [];
            const currentPath = [];

            for (let i = 0; i <= points; i++) {
                const x = (width / points) * i;
                
                const bullishPrice = current + (bullish - current) * (i / points) * (1 + Math.sin(i / points * Math.PI) * 0.2);
                const bullishY = height - ((bullishPrice - minPrice) / range) * height;
                bullishPath.push(`${x},${bullishY}`);

                const bearishPrice = current - (current - bearish) * (i / points) * (1 - Math.cos(i / points * Math.PI) * 0.1);
                const bearishY = height - ((bearishPrice - minPrice) / range) * height;
                bearishPath.push(`${x},${bearishY}`);

                const currentY = height - ((current - minPrice) / range) * height;
                currentPath.push(`${x},${currentY}`);
            }

            const bullishLine = document.createElementNS('http://www.w3.org/2000/svg', 'polyline');
            bullishLine.setAttribute('points', bullishPath.join(' '));
            bullishLine.setAttribute('fill', 'none');
            bullishLine.setAttribute('stroke', '#44ff88');
            bullishLine.setAttribute('stroke-width', '2');
            svg.appendChild(bullishLine);

            const bearishLine = document.createElementNS('http://www.w3.org/2000/svg', 'polyline');
            bearishLine.setAttribute('points', bearishPath.join(' '));
            bearishLine.setAttribute('fill', 'none');
            bearishLine.setAttribute('stroke', '#ff4b6e');
            bearishLine.setAttribute('stroke-width', '2');
            svg.appendChild(bearishLine);

            const currentLine = document.createElementNS('http://www.w3.org/2000/svg', 'polyline');
            currentLine.setAttribute('points', currentPath.join(' '));
            currentLine.setAttribute('fill', 'none');
            currentLine.setAttribute('stroke', '#9a9fbf');
            currentLine.setAttribute('stroke-width', '2');
            currentLine.setAttribute('stroke-dasharray', '5,5');
            svg.appendChild(currentLine);

            canvas.appendChild(svg);
        }

        (async function initializeApp() {
            await autoUpdateData();
            autoUpdateInterval = setInterval(autoUpdateData, 30000);
        })();

        document.addEventListener('DOMContentLoaded', function() {
            const analyzeBtn = document.querySelector('button[onclick="analyzeMarket()"]');
            if (analyzeBtn) analyzeBtn.onclick = analyzeMarket;
        });

        window.addEventListener('beforeunload', function() {
            if (autoUpdateInterval) clearInterval(autoUpdateInterval);
        });
    </script>
</body>
</html>
```

